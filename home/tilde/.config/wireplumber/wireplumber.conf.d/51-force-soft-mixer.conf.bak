monitor.alsa.rules = [
  {
    matches = [
      {
        # Match all ALSA output nodes (your speakers/headphones)
        node.name = "~alsa_output.*"
      }
    ]
    actions = {
      update-props = {
        # Force volume to be handled in software (CPU), not hardware (DAC)
        api.alsa.soft-mixer = true
      }
    }
  }
]
