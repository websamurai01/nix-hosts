[
      {
        "output": "DP-1", // <-- Убедитесь, что это ваш первый монитор
        "layer": "top",
        "position": "top",
        "modules-left": ["hyprland/workspaces"],
        "modules-center": ["hyprland/window"],
        // --- ИЗМЕНИТЕ СТРОКУ НИЖЕ ---
